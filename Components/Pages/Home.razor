@page "/"

@using AppMeteo.Models
@using Alert = AppMeteo.Models.Alert

<PageTitle>Home</PageTitle>

<!-- Début du tableau de bord -->
<div class="dashboard">
    <h2>Tableau de Bord</h2>
    <div class="dashboard-item">
        <h3>Liste des Alertes</h3>
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Pièce</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alerte in alertes)
                {
                    <tr>
                        <td>@alerte.AlertId</td>
                        <td>@alerte.Measure.Room.RoomName</td>
                        <td>@alerte.AlertMessage</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="dashboard-item">
        <h3>Température la plus haute</h3>
        <p>25°C</p>
    </div>
    <!-- Ajoutez plus d'éléments de tableau de bord ici -->
</div>
<!-- Fin du tableau de bord -->

@code {
    private List<Alert> alertes = new List<Alert>();

    protected override void OnInitialized()
    {
        alertes.Add(new Alert {
            AlertId = 1,
            AlertMessage = "Alerte 1",
            Measure = new Measure() {
                MeasureId = 1,
                Temperature = 25,
                Humidity = 50,
                Date = DateTime.Now,
                Pressure = 1013,
                Room = new Room() {
                    RoomId = 1,
                    RoomName = "Chambre 1",
                }
            },
        });
    }
}

<style>
    .table {
        margin-top: 20px;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
    }
</style>
